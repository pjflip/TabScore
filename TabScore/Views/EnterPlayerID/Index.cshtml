@model TabScore.Models.EnterPlayerID
@using Resources
@using System.Web.Optimization

<style>
    .btn-numeric {
        font-size: 1.5rem;
        width: 3em;
    }
</style>

<div class="row mt-5">
    <div class="col-12 text-center p-0">
        <h3>
            @Strings.EnterID @Model.DisplayDirection
        </h3>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12 text-center p-0">
        <input class="form-control-lg text-center mx-auto my-1" style="width: 8em" type="text" id="playerNumberBox" value="" readonly>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12 text-center p-0">
        <button id="nk" class="btn btn-secondary btn-lg m-1" onclick="unknown()">
            @Strings.Unknown
        </button>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center p-0">
        <button class="btn btn-primary btn-lg btn-numeric px-0 m-1" style="width:2.5em" ontouchstart="touchAvailable = true; addNumber(1)" onclick="if (!touchAvailable) addNumber(1)">
            1
        </button>
        <button class="btn btn-primary btn-lg btn-numeric px-0 m-1" style="width:2.5em" ontouchstart="touchAvailable = true; addNumber(2)" onclick="if (!touchAvailable) addNumber(2)">
            2
        </button>
        <button class="btn btn-primary btn-lg btn-numeric px-0 m-1" style="width:2.5em" ontouchstart="touchAvailable = true; addNumber(3)" onclick="if (!touchAvailable) addNumber(3)">
            3
        </button>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center p-0">
        <button class="btn btn-primary btn-lg btn-numeric px-0 m-1" style="width:2.5em" ontouchstart="touchAvailable = true; addNumber(4)" onclick="if (!touchAvailable) addNumber(4)">
            4
        </button>
        <button class="btn btn-primary btn-lg btn-numeric px-0 m-1" style="width:2.5em" ontouchstart="touchAvailable = true; addNumber(5)" onclick="if (!touchAvailable) addNumber(5)">
            5
        </button>
        <button class="btn btn-primary btn-lg btn-numeric px-0 m-1" style="width:2.5em" ontouchstart="touchAvailable = true; addNumber(6)" onclick="if (!touchAvailable) addNumber(6)">
            6
        </button>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center p-0">
        <button class="btn btn-primary btn-lg btn-numeric px-0 m-1" style="width:2.5em" ontouchstart="touchAvailable = true; addNumber(7)" onclick="if (!touchAvailable) addNumber(7)">
            7
        </button>
        <button class="btn btn-primary btn-lg btn-numeric px-0 m-1" style="width:2.5em" ontouchstart="touchAvailable = true; addNumber(8)" onclick="if (!touchAvailable) addNumber(8)">
            8
        </button>
        <button class="btn btn-primary btn-lg btn-numeric px-0 m-1" style="width:2.5em" ontouchstart="touchAvailable = true; addNumber(9)" onclick="if (!touchAvailable) addNumber(9)">
            9
        </button>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center p-0">
        <button class="btn btn-warning btn-lg btn-numeric px-0 m-1" style="width:2.5em" ontouchstart="touchAvailable = true; clearLastEntry()" onclick="if (!touchAvailable) clearLastEntry()">
            CE
        </button>
        <button class="btn btn-primary btn-lg btn-numeric px-0 m-1" style="width:2.5em" ontouchstart="touchAvailable = true; addNumber(0)" onclick="if (!touchAvailable) addNumber(0)">
            0
        </button>
        <button class="btn btn-danger btn-lg btn-numeric px-0 m-1" style="width:2.5em" ontouchstart="touchAvailable = true; clearplayerNumber()" onclick="if (!touchAvailable) clearplayerNumber()">
            C
        </button>
    </div>
</div>

<script>
    var urlOKButtonClick = '@Url.Action("OKButtonClick", "EnterPlayerID")?tabletDeviceNumber=@Model.TabletDeviceNumber&direction=@Model.Direction';
    var stringUnknown = '@Strings.Unknown';
</script>
@Scripts.Render("~/bundles/enterPlayerIdJS")